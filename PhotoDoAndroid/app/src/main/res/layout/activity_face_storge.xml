<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yqy.photodo.fragment.HandleFragment">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/root_bg_color"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/top_bg_color"
            android:layout_height="@dimen/title_bar_height">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人脸库"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/title_main_text_size" />
            <TextView
                android:id="@+id/upto_storge_tv"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="上传图片"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/user_exit_login"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="人脸库信息"
            android:drawableLeft="@drawable/common_problem"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/facestorge_name"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:text="人脸库名："
            android:drawableLeft="@drawable/common_problem"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/facestorge_num"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:text="人脸库数量："
            android:drawableLeft="@drawable/common_problem"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
